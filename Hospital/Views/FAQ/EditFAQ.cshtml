@model Hospital.Models.ManageFAQViewModel
@{
    ViewData["Title"] = "EditFAQ";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<!-- Bootstrap 3.3.6 -->
<link rel="stylesheet" href="~/admin/bootstrap/css/bootstrap.min.css">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
<!-- Ionicons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
<!-- jvectormap -->
<link rel="stylesheet" href="~/admin/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/admin/css/AdminLTE.min.css">


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit FAQ
            <small>Create</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Edit FAQ</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title page-title_main">Edit FAQ</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form asp-controller="FAQ" asp-action="EditFAQ" method="post" class="form-horizontal">
                            <input type="hidden" value="@Model.Id" name="Id" />
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 col-xl-12">
                                <div class="row">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <i class="fa fa-question"></i>   <label asp-for="Question"></label>
                                            <input asp-for="Question" class="form-control" placeholder="Enter Question" />
                                            <span asp-validation-for="Question" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <i class="fa fa-file" aria-hidden="true"></i>  <label asp-for="Answer"></label>
                                            <textarea asp-for="Answer" class="form-control" placeholder="Enter Answer" ></textarea>
                                            <span asp-validation-for="Answer" class="text-danger"></span>
                                        </div>


                                    </div>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 col-xl-12">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <button type="submit" class="faq_btn button button-contactForm">Update</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->


<script src="~/admin/plugins/jQuery/jquery-2.2.3.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="~/admin/bootstrap/js/bootstrap.min.js"></script>
<!-- FastClick -->
<script src="~/admin/plugins/fastclick/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="~/admin/js/app.min.js"></script>
<!-- Sparkline -->
<script src="~/admin/plugins/sparkline/jquery.sparkline.min.js"></script>
<!-- jvectormap -->
<script src="~/admin/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
<script src="~/admin/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
<!-- SlimScroll 1.3.0 -->
<script src="~/admin/plugins/slimScroll/jquery.slimscroll.min.js"></script>
<!-- ChartJS 1.0.1 -->
<script src="~/admin/plugins/chartjs/Chart.min.js"></script>
<script src="~/admin/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/admin/plugins/datatables/dataTables.bootstrap.js"></script>
<!-- AdminLTE dashboard demo (This is only for demo purposes) -->
@section Scripts
        {
        <script>
            $('.treeview').removeClass('active');
            $('.FAQs').addClass('active');
        </script>
    }
