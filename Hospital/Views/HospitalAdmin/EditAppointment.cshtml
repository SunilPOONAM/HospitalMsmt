@model Hospital.Models.SubAdmin.Appointments

@{
    ViewData["Title"] = "EditAppointment";
    Layout = "~/Views/Shared/_HospitalAdminLayout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/HospitalAdmin/index" class="main_page">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Appointment</li>

    </ol>
</nav>
<div class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h4 class="page-title page-title_main">Edit Appointment</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 m-b-20">
            <form asp-action="EditAppointment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AppointmentId" />
                <input type="hidden" asp-for="CreatedDate" class="form-control" />
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="PatientId" class="control-label float-left"></label>
                            <input asp-for="PatientId" class="form-control" required />
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="DoctorName" class="control-label float-left"></label>
                            <input asp-for="DoctorName" class="form-control" required />
                            <span asp-validation-for="DoctorName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Department" class="control-label float-left"></label>
                            <select asp-for="Department" class="form-control" required>
                                <option value="">Select Department</option>
                                <option value="Dentists">Dentists</option>
                                <option value="Neurology">Neurology</option>
                                <option value="Opthalmology">Opthalmology</option>
                                <option value="Orthopedics">Orthopedics</option>
                                <option value="CancerDepartment">Cancer Department</option>
                                <option value="ENTDepartment">ENT Department</option>
                                <option value="Other">Other Department</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="TokenNumber" class="control-label float-left"></label>
                            <input type="number" asp-for="TokenNumber" class="form-control" required />
                            <span asp-validation-for="TokenNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label asp-for="Problem" class="control-label float-left"></label>
                            <textarea asp-for="Problem" class="form-control" required></textarea>
                            <span asp-validation-for="Problem" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="AppointmentDate" class="control-label float-left"></label>
                            <input asp-for="AppointmentDate" id="DOB" class="form-control" required />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="TimeSlot" class="control-label float-left"></label>
                            <input asp-for="TimeSlot" class="form-control" required />
                            <span asp-validation-for="TimeSlot" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="AppointmentStatus" class="control-label float-left"></label>
                            <div class="form-check form-check-inline">
                                <input asp-for="AppointmentStatus" class="form-check-input" type="radio" id="appointment_Active" value="Active" checked>
                                <label class="form-check-label" for="appointment_Active">
                                    Active
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="AppointmentStatus" class="form-check-input" type="radio" id="appointment_IsActive" value="IsActive">
                                <label class="form-check-label" for="appointment_IsActive">
                                    IsActive
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn btn-success submit-btn">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("DOB").setAttribute("min", today);
</script>

