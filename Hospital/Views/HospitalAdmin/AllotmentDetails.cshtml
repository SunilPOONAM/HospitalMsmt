@model Hospital.Models.SubAdmin.Allotment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_HospitalAdminLayout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/HospitalAdmin/index" class="main_page">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Allotment Details</li>

    </ol>
</nav>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <h2 class="page-title page-title_main">Room Allotments Details</h2>
            </div>
        </div>
        <div class="row">
            <!-- Widget Item -->
            <div class="col-md-12">
                <div class="widget-area-2 proclinic-box-shadow">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <td> <h4> @Html.DisplayNameFor(model => model.Room)</h4>  </td>
                                    <td> @Html.DisplayFor(model => model.Room)</td>
                                </tr>
                                <tr>
                                    <td> <h4>  @Html.DisplayNameFor(model => model.RoomType)</h4> </td>
                                    <td>  @Html.DisplayFor(model => model.RoomType) </td>
                                </tr>
                                <tr>
                                    <td> <h4>   @Html.DisplayNameFor(model => model.PatientName) </h4> </td>
                                    <td>   @Html.DisplayFor(model => model.PatientName)</td>
                                </tr>
                                <tr>
                                    <td><h4>   @Html.DisplayNameFor(model => model.AllotmentDate) </h4> </td>
                                    <td>  @Html.DisplayFor(model => model.AllotmentDate) </td>
                                </tr>
                                <tr>
                                    <td><h4>  @Html.DisplayNameFor(model => model.DischargeDate) </h4> </td>
                                    <td>   @Html.DisplayFor(model => model.DischargeDate) </td>
                                </tr>
                                <tr>
                                    <td> <h4>  @Html.DisplayNameFor(model => model.DoctorName) </h4> </td>
                                    <td>  @Html.DisplayFor(model => model.DoctorName)</td>
                                </tr>
                                <tr>
                                    <td><h4>   @Html.DisplayNameFor(model => model.Status)</h4> </td>
                                    <td> @Html.DisplayFor(model => model.Status) </td>
                                </tr>
                            </tbody>
                        </table>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination export-pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#"><span class="fa fa-download "></span> csv</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><span class="fa fa-printer"></span> print</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><span class="fa fa-file "></span> PDF</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><span class="fa fa-align-justify "></span> Excel</a>
                                </li>
                            </ul>
                        </nav>
                        <div>
                            @*<a asp-action="EditAllotment" asp-route-id="@Model.AllotmentId" class="btn btn-success mb-3"><i class="fa fa-pencil m-r-5"></i>Edit Allotment</a>*@
                            <a class="btn btn-success mb-3" asp-controller="HospitalAdmin" asp-action="AllotmentDelete" asp-route-id="@Model.AllotmentId" onclick="return confirm('Are you sure want to delete this room allotment ?')"><i class="fa fa-trash-o m-r-5"></i> Delete Allotment</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>