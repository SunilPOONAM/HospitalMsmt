                                        <td>
                                            <h4>   @Html.DisplayNameFor(model => model.Experience)</h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Experience)
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <h4>   @Html.DisplayNameFor(model => model.Email)</h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Email)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4>     @Html.DisplayNameFor(model => model.PhoneNumber)</h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.PhoneNumber)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4>@Html.DisplayNameFor(model => model.FaxNo)</h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.FaxNo)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4>@Html.DisplayNameFor(model => model.Street)</h4>
