                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Country)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4>   @Html.DisplayNameFor(model => model.DoctorDetails)</h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.DoctorDetails)
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                            <div>
                                <a asp-action="EditDoctor" asp-route-id="@Model.Id" class="btn btn-success mb-3"><i class="fa fa-pencil m-r-5"></i> Edit Doctor</a>

                                <a class="btn btn-danger mb-3" asp-controller="HospitalAdmin" asp-action="DoctorDelete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure want to delete this appointment ?')"><i class="fa fa-trash-o m-r-5"></i> Delete Doctor</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
