                                                        <label asp-for="PatientID" class="control-label"></label>
                                                        @Html.DisplayFor(m => m.PatientID)
                                                    </div>
                                                </div>
                                                <div class="input-group">
                                                    <span class="input-group-addon"> <i class="material-icons"></i></span>
                                                    <div class="form-group label-floating">
                                                        <label asp-for="PatientName" class="control-label"></label>
                                                        <input asp-for="PatientName" type="text" class="form-control">
                                                        <span asp-validation-for="PatientName" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="material-icons"></i>
                                                    </span>
                                                    <div class="form-group label-floating">
                                                        <label asp-for="Phone" class="control-label"></label>
                                                        <input asp-for="Phone" type="number" class="form-control">
                                                        <span asp-validation-for="PatientName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="input-group">
                                                    <div class="form-group label-floating">
                                                        <span>
                                                            <label asp-for="Gender" class="control-label"></label>
                                                            <input asp-for="Gender" type="radio" value="Male" />Male
                                                            <input asp-for="Gender" type="radio" value="Female" />Female
                                                        </span>
                                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="material-icons"></i>
                                                    </span>
                                                    <div class="form-group label-floating">
                                                        <label asp-for="Address" class="control-label"></label>
                                                        <textarea asp-for="Address" type="text" class="form-control"></textarea>
                                                        <span asp-validation-for="PatientName" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group label-floating">
                                                    <label asp-for="CountryId" class="control-label"></label>
                                                    <select asp-for="CountryId" class="form-control">
                                                        <option disabled="" selected=""></option>
