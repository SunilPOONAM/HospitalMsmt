@model Hospital.Models.AppFeatureViewModel

@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h4 class="page-title page-title_main">Features</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <form asp-controller="Features" asp-action="NewFeature" method="post" class="form-horizontal">
                <div class="col-lg-12">
                    <div class="row">

                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 col-xl-12">
                            <div class="form-group">
                                <i class="fa fa-book"></i> <label asp-for="FeatureName" class="control-label"></label>
                                <input asp-for="FeatureName" class="form-control" placeholder="Enter feature name" />
                                <span asp-validation-for="FeatureName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 col-xl-12">
                            <div class="form-group">
                                <i class="fa fa-file-text" aria-hidden="true"></i>  <label asp-for="Description" class="control-label"></label>
                                <textarea rows="+5" asp-for="Description" class="form-control" placeholder="Enter description"> </textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 col-xl-12">
                            <div class="form-group">
                                <input asp-for="IsActive" type="checkbox" />
                                <label asp-for="IsActive"></label>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 col-xl-12">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="button button-contactForm btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>


@section Scripts
    {
    <script>
        $('.treeview').removeClass('active');
        $('.features').addClass('active');
    </script>
}

