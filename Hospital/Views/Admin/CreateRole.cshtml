@model Hospital.Models.RoleMaster

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/index">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Role</li>
    </ol>
</nav>
<div class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h4 class="page-title page-title_main">Add Role </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 offset-lg-12">
            <form asp-action="CreateRole" asp-controller="Admin" id="CreateRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" />
                            <i class="fa fa-map" aria-hidden="true"></i> <label asp-for="Role" class="control-label"></label>
                            <input asp-for="Role" type="text" class="form-control" placeholder="Role" autocomplete="off" />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
                        <div class="form-group">
                            <div class="state_btn text-left">
                                <button class="btn btn-success submit-btn" type="submit">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 offset-lg-12">
            <h4 class="page-title"><i class="fa fa-list"></i> Manage Role </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 offset-lg-12">
            <table id="tblRoleMaster" class="display dataTable cell-border table-bordered">
                <thead>
                    <tr>
                        <th><i class="fa fa-id-card" aria-hidden="true"></i> S.No</th>
                        <th><i class="fa fa-map" aria-hidden="true"></i> Role</th>
                        <th>  <i class="fa fa-gavel"></i> Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/admin/js/pages/ManageRole.js"></script>
}