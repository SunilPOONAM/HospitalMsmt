@model Hospital.Models.SuperAdminModels.HospitalModel
@{
    ViewData["Title"] = "ManageHospital";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<style>
    table.dataTable thead .sorting, table.dataTable thead .sorting_asc, table.dataTable thead .sorting_desc, table.dataTable thead .sorting_asc_disabled, table.dataTable thead .sorting_desc_disabled {
        white-space: nowrap;
    }
</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/index">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Manage Hospital</li>
    </ol>
</nav>
<div class="content">
    <div class="row">
        <div class="col-lg-12 offset-lg-12">
            <h4 class="page-title"><i class="fa fa-list"></i> Manage hospital </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 offset-lg-12">
            <div class="table  table-responsive">
                <table id="tbl_Hospital" class="display dataTable cell-border table-bordered">
                    <thead>
                        <tr>
                            <th><i class="fa fa-id-card" aria-hidden="true"></i> S.No</th>
                            <th><i class="fa fa-building" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.HospitalName)</th>
                            <th><i class="fa fa-mobile" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.ContactNo)</th>
                            <th>
                                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                @Html.DisplayNameFor(model => model.ContactPersone)
                            </th>
                            <th>
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                 @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th><i class="fa fa-map" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.StateName)</th>
                            <th><i class="fa fa-building-o" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.CityName)</th>
                            <th><i class="fa fa-map-marker" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.Address)</th>
                            <th>
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                 @Html.DisplayNameFor(model => model.EmailConfirmed)
                            </th>
                            <th><i class="fa fa-toggle-on" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.IsActive)</th>
                            <th><i class="fa fa-calendar" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.CreateDate)</th>
                            <th><i class="fa fa-calendar" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.ModifiedDate)</th>
                            <th> <i class="fa fa-gavel"></i> Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/pages/ManageHospital.js"></script>
}