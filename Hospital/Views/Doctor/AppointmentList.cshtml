@model IEnumerable<Hospital.Models.SubAdmin.Appointments>

@{
    ViewData["Title"] = "AppointmentList";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<style>

    .table.custom-table > tbody > tr > td, .table.custom-table > tbody > tr > th, .table.custom-table > tfoot > tr > td, .table.custom-table > tfoot > tr > th, .table.custom-table > thead > tr > td, .table.custom-table > thead > tr > th {
        min-width: 170px !important;
    }
</style>
<div class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h2 class="page-title page-title_main">Appointment Lists</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a asp-action="AddAppointment" class="btn btn-success btn-rounded float-right add_appointment"> Add Appointment  </a><br/>
            <div class="table-responsive">
                <table class="table table-border table-striped custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>
                                <i class="fa fa-id-card" aria-hidden="true"></i>  @Html.DisplayNameFor(model => model.PatientId)
                            </th>
                            <th>
                                <i class="fa fa-user-md"></i>   @Html.DisplayNameFor(model => model.DoctorName)
                            </th>
                            <th>
                                <i class="fa fa-building-o" aria-hidden="true"></i>   @Html.DisplayNameFor(model => model.Department)
                            </th>
                            <th>
                                <i class="fa fa-id-badge" aria-hidden="true"></i>  @Html.DisplayNameFor(model => model.TokenNumber)
                            </th>
                            <th>
                                <i class="fa fa-bug" aria-hidden="true"></i>   @Html.DisplayNameFor(model => model.Problem)
                            </th>
                            <th>
                                <i class="fa fa-calendar" aria-hidden="true"></i> @Html.DisplayNameFor(model => model.AppointmentDate)
                            </th>
                            <th>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>  @Html.DisplayNameFor(model => model.TimeSlot)
                            </th>
                            <th>
                                <i class="fa fa-toggle-on" aria-hidden="true"></i>  @Html.DisplayNameFor(model => model.AppointmentStatus)
                            </th>
                            <th class="text-center">
                                <i class="fa fa-gavel"></i>   Actions
                            </th>
                                
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatientId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DoctorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TokenNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Problem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeSlot)
                                </td>
                                <td>
                                    @if (item.AppointmentStatus == "Active")
                                    {
                                        <span class="custom-badge status-green">
                                            @Html.DisplayFor(modelItem => item.AppointmentStatus)
                                        </span>
                                    }
                                    else if (item.AppointmentStatus == "IsActive")
                                    {
                                        <span class="custom-badge status-red">
                                            @Html.DisplayFor(modelItem => item.AppointmentStatus)
                                        </span>
                                    }
                                    else
                                    {

                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="EditAppointment" asp-route-id="@item.AppointmentId"><i class="fa fa-pencil-square-o" style="font-size: 19px"></i></a> |
                                    <a asp-action="AppointmentDetails" asp-route-id="@item.AppointmentId"><i class="fa fa-info-circle m-r-5" style="font-size: 19px; color: lightblue"></i></a> |
                                    <a asp-controller="Doctor" asp-action="AppointmentDelete" asp-route-id="@item.AppointmentId" onclick="return confirm('Are you sure want to delete this Appointment?')"><i class="fa fa-trash-o m-r-5" style="font-size: 19px; color: red"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>
</div>
