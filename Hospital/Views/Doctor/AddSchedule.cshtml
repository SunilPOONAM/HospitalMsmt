@model Hospital.Models.SubAdmin.Schedule

@{
    ViewData["Title"] = "AddSchedule";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
@section scripts{
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

}
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/assets/css/form_wizard_css.css" />

<div class="image-container set-full-height">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <!-- Wizard container -->
                <div class="wizard-container">
                    <div class="card wizard-card" data-color="red" id="wizard">
                        <form asp-action="AddSchedule">
                            <!--        You can switch " data-color="blue" "  with one of the next bright colors: "green", "orange", "red", "purple"             -->
                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    Add Doctor Schedule
                                </h3>
                            </div>
                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="#day" data-toggle="tab">Day Time</a></li>
                                    <li><a href="#Status" data-toggle="tab">Status</a></li>
                                </ul>
                            </div>

                            <div class="tab-content">

                                <div class="tab-pane" id="day">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group label-floating">
                                                <label asp-for="AvailableStartDay" class="control-label"></label>
                                                <select asp-for="AvailableStartDay" class="form-control" required>
                                                    <option value="Monday" selected="selected">Monday</option>
                                                    <option value="Tuesday">Tuesday</option>
                                                    <option value="Wednesday">Wednesday</option>
                                                    <option value="Thursday">Thursday</option>
                                                    <option value="Friday">Friday</option>
                                                    <option value="Saturday">Saturday</option>
                                                </select>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group label-floating">
                                                <label asp-for="AvailableEndDay" class="control-label"></label>
                                                <select asp-for="AvailableEndDay" class="form-control" required>

                                                    <option value="Monday" selected="selected">Monday</option>
                                                    <option value="Tuesday">Tuesday</option>
                                                    <option value="Wednesday">Wednesday</option>
                                                    <option value="Thursday">Thursday</option>
                                                    <option value="Friday">Friday</option>
                                                    <option value="Saturday">Saturday</option>
                                                </select>
                                                <span asp-validation-for="AvailableEndDay" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group label-floating">
                                                 <label asp-for="AvailableStartTime" class="control-label"></label>
                                                <input asp-for="AvailableStartTime" class="form-control" required />
                                                <span asp-validation-for="AvailableStartTime" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group label-floating">
                                                 <label asp-for="AvailableEndTime" class="control-label"></label>
                                                <input asp-for="AvailableEndTime" class="form-control" required />
                                                <span asp-validation-for="AvailableEndTime" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane" id="Status">
                                    <div class="row">
                                        @*<div class="col-sm-12">
                                            <h2 class="info-text">Status</h2>
                                        </div>*@

                                        <div class="col-sm-6">
                                            <div class="form-group label-floating">
                                                <label asp-for="TimePerPatient" class="control-label"></label>
                                                <input type="number" asp-for="TimePerPatient" class="form-control" required />
                                                <span asp-validation-for="TimePerPatient" class="text-danger"></span>
                                            </div>
                                        </div>
                                       
                                        <div class="col-sm-6">
                                            <label asp-for="Status" class="control-label"></label>
                                            <div class="form-group label-floating">
                                                <div class="form-check form-check-inline" style="margin-right:60px">
                                                    <input asp-for="Status" class="form-check-input" type="radio" id="Schedule_Active" value="Active" checked>
                                                    <label class="form-check-label" for="Schedule_Active">
                                                        Active
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input asp-for="Status" class="form-check-input" type="radio" id="Schedule_IsActive" value="IsActive">
                                                    <label class="form-check-label" for="Schedule_IsActive">
                                                        IsActive
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="wizard-footer">
                                <div class="pull-right">
                                    <input type='button' class='btn btn-next btn-fill btn-wd' name='next' value='Next' />
                                <button class="btn btn-finish btn-fill btn-wd btn btn-success submit-btn">Create Doctor  Schedule</button>
                                </div>
                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div> <!-- row -->
    </div> <!--  big container -->

</div>
