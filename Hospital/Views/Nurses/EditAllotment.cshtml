@model Hospital.Models.SubAdmin.Allotment

@{
    ViewData["Title"] = "EditAllotment";
    Layout = "~/Views/Shared/_NursesLayout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h3 class="page-title page-title_main">Edit Room Allotments</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 m-b-20">
            <form asp-action="EditAllotment">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="AllotmentId" />

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <i class="fa fa-bed" aria-hidden="true"></i>   <label asp-for="Room" class="control-label"></label>
                            <input asp-for="Room" class="form-control" required />
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <i class="fa fa-medium" aria-hidden="true"></i>  <label asp-for="RoomType" class="control-label"></label>
                            <select asp-for="RoomType" class="form-control" required>
                                <option value="">Select</option>
                                <option value="General">General</option>
                                <option value="A.C">A.C</option>
                                <option value="ICU">ICU</option>
                            </select>
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="form-group">
                            <i class="fa fa-wheelchair" aria-hidden="true"></i>  <label asp-for="PatientName" class="control-label"></label>
                            <input asp-for="PatientName" class="form-control" required />
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <i class="fa fa-calendar" aria-hidden="true"></i>   <label asp-for="AllotmentDate" class="control-label "></label>
                            <input asp-for="AllotmentDate" class="form-control" required />
                            <span asp-validation-for="AllotmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <i class="fa fa-calendar" aria-hidden="true"></i>  <label asp-for="DischargeDate" class="control-labe"></label>
                            <input asp-for="DischargeDate" class="form-control" required />
                            <span asp-validation-for="DischargeDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <i class="fa fa-user-md"></i>  <label asp-for="DoctorName" class="control-label"></label>
                            <input asp-for="DoctorName" class="form-control" required />
                            <span asp-validation-for="DoctorName" class="text-danger"></span>
                        </div>
                    </div>
         
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <i class="fa fa-toggle-on" aria-hidden="true"></i> <label asp-for="Status" class="control-label"></label>
                        </div>
                        <div class="form-group">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="allotment_available" value="Available" checked>
                                <label class="form-check-label" for="allotment_available">
                                    Available
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="allotment_notdischarge" value="Not Discharge">
                                <label class="form-check-label" for="allotment_notdischarge">
                                    Not Discharge
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="allotment_notalloted" value="Not Alloted">
                                <label class="form-check-label" for="allotment_notalloted">
                                    Not Alloted
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="m-t-20 text-center">
                        <button class="btn btn-success submit-btn">Save</button>
                    </div>
</form>
        </div>
    </div>
    </div>
